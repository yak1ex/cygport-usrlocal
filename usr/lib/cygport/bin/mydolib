set -e

if defined USRLOCAL
then
	libdir=/usr/local/lib
else
	libdir=/usr/lib
fi

dodir ${libdir}

for i
do
	if [ ! -e ${i} ]
	then
		error "file ${i} does not exist"
	fi

	case ${i} in
		*.la)
			check_prog_req libtool
			inst_prog="libtool --mode=install /bin/install"
			;;
		*) 	inst_prog="/bin/install -m0644" ;;
	esac

	${inst_prog} ${i} ${D}${libdir} || error "mydolib ${i} failed"
done
